<div class="col-md-4" id="devoured">
<h2 id="dvd" >Devoured!</h2> 
<div class="form-section">
<ol>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ol>
</div> 
</div>
</div>
</div>


